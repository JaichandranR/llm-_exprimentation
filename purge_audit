{# /* =========================================================================
Model: purge_audit
Purpose:
  - Holds before/after purge metrics for RCC-based purging.
  - Managed and inserted into by the purge_by_rcc macro.
============================================================================ */ #}

{{ config(
    materialized = 'table',
    format = 'iceberg',
    file_format = 'parquet',
    table_type = 'iceberg',
    on_schema_change = 'ignore'
) }}

SELECT
    CAST(NULL AS VARCHAR) AS model_name,
    CAST(NULL AS VARCHAR) AS schema_name,
    CAST(NULL AS VARCHAR) AS database_name,
    CAST(NULL AS VARCHAR) AS rcc_code,
    CAST(NULL AS VARCHAR) AS purge_date_field,
    CAST(NULL AS VARCHAR) AS ruleperiod,
    CAST(NULL AS VARCHAR) AS unit_code,
    CAST(NULL AS BIGINT) AS record_count_before,
    CAST(NULL AS BIGINT) AS record_count_after,
    CAST(NULL AS VARCHAR) AS snapshot_id_before,
    CAST(NULL AS VARCHAR) AS snapshot_id_after,
    CAST(NULL AS TIMESTAMP) AS purge_timestamp,
    CAST(NULL AS VARCHAR) AS executed_by
WHERE FALSE
