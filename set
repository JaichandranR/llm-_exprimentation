id: trp_application_risk_info
namespace: core-services

tasks:
  - id: prepare_dates
    type: io.kestra.core.tasks.debugs.Return
    format: >
      [
        {% if now() | date('u') != '6' and now() | date('u') != '7' %}
          "{{ now() | date('yyyy-MM-dd') }}",
        {% endif %}

        "{{ now() | date('yyyy-MM-01') }}",

        {% for i in range(1, 7) %}
          {% set month_start = dateAdd(-i, 'MONTHS') | date('yyyy-MM-01') %}
          {% set dow = dateAdd(-i, 'MONTHS') | date('u') %}
          {% if dow != '6' and dow != '7' %}
            "{{ month_start }}",
          {% endif %}
        {% endfor %}
      ]

  - id: debug_output
    type: io.kestra.plugin.core.log.Log
    message: "Prepare Dates Output: {{ outputs.prepare_dates }}"

  - id: log_dates_loop
    type: io.kestra.core.tasks.flows.EachSequential
    value: "{{ outputs.prepare_dates.value }}"
    tasks:
      - id: log_date
        type: io.kestra.plugin.core.log.Log
        message: "Processing date: {{ taskrun.value }}"
