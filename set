- id: log_date_loop
  type: io.kestra.core.tasks.flows.EachSequential
  value: "{{ outputs.prepare_dates }}"
  tasks:
    - id: log
      type: io.kestra.plugin.core.log.Log
      message: >
        {% set parts = taskrun.value | split('|') %}
        Running for {{ parts[0] }} (index = {{ parts[1] }})




- id: prepare_dates
  type: io.kestra.core.tasks.debugs.Return
  format: >
    [
    {% set index = 0 %}
    {% set first = true %}

    {% if now() | date('u') != '6' and now() | date('u') != '7' %}
      {% if not first %},{% endif %}
      "{{ now() | date('yyyy-MM-dd') }}|{{ index }}"{% set index = index + 1 %}{% set first = false %}
    {% endif %}

    {% set m1 = now() | date('yyyy-MM-01') %}
    {% if m1 | date('u') != '6' and m1 | date('u') != '7' %}
      {% if not first %},{% endif %}
      "{{ m1 }}|{{ index }}"{% set index = index + 1 %}{% set first = false %}
    {% endif %}

    {% for i in range(1, 7) %}
      {% set d = now() | dateAdd(-i, 'MONTHS') | date('yyyy-MM-01') %}
      {% if d | date('u') != '6' and d | date('u') != '7' %}
        {% if not first %},{% endif %}
        "{{ d }}|{{ index }}"{% set index = index + 1 %}{% set first = false %}
      {% endif %}
    {% endfor %}
    ]


- id: log
  type: io.kestra.plugin.core.log.Log
  message: >
    {% set parts = taskrun.value | split('|') %}
    Running for {{ parts[0] }} (index = {{ parts[1] }})
