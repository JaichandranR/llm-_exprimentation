- id: prepare_dates
  type: io.kestra.core.tasks.debugs.Return
  format: >
    [
      {% if now() | date('u') != '6' and now() | date('u') != '7' %}
        "{{ now() | date('yyyy-MM-dd') }}",
      {% endif %}

      "{{ now() | date('yyyy-MM-01') }}",

      {% for i in range(1, 7) %}
        {% set d = dateAdd(-i, 'MONTHS') %}
        {% if (d | date('u')) != '6' and (d | date('u')) != '7' %}
          "{{ d | date('yyyy-MM-01') }}",
        {% endif %}
      {% endfor %}
    ]
