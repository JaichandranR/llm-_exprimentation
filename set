- id: prepare_dates
  type: io.kestra.core.tasks.debugs.Return
  format: >
    [
      {% set today_dow = now() | date('u') %}
      {% if today_dow != '6' and today_dow != '7' %}
        "{{ now() | date('yyyy-MM-dd') }}",
      {% endif %}

      "{{ now() | date('yyyy-MM-01') }}",

      {% for i in range(1, 7) %}
        {% set d = dateAdd(-i, 'MONTHS') %}
        {% set dow = d | date('u') %}
        {% if dow != '6' and dow != '7' %}
          "{{ d | date('yyyy-MM-01') }}",
        {% endif %}
      {% endfor %}
    ]
