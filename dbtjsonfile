connector.name=hive

# Hadoop / S3 Settings
fs.native-s3.enabled=false
fs.hadoop.enabled=true

# Hive Metastore (HMS) Settings
hive.metastore.uri=thrift://hms-minio:9083
hive.metastore.thrift.client.connect-timeout=120s
hive.metastore.thrift.client.read-timeout=120s
hive.metastore.thrift.delete-files-on-drop=true

# Hive Table Settings
hive.create-empty-bucket-files=true
hive.max-partitions-per-scan=1000000
hive.non-managed-table-writes-enabled=true
hive.non-managed-table-creates-enabled=true
hive.storage-format=Parquet

# S3 (MinIO) Settings
hive.s3.endpoint=http://minio:9000
hive.s3.path-style-access=true
hive.s3.ssl.enabled=false
hive.s3.aws-access-key=${ENV:MINIO_ROOT_USER}
hive.s3.aws-secret-key=${ENV:MINIO_ROOT_PASSWORD}

# (Optional: if you have many connections)
# hive.s3.max-connections=200
# hive.s3.connect-timeout=900s
# hive.s3.socket-timeout=900s
