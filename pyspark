- id: prepare_dates
  type: io.kestra.core.tasks.debugs.Return
  format: >
    {% set result = [] %}
    {% set index = 0 %}

    {% if now() | date('u') != '6' and now() | date('u') != '7' %}
      {{ result.push(now() | date('yyyy-MM-dd') ~ '|' ~ index) }}
      {% set index = index + 1 %}
    {% endif %}

    {% set m1 = now() | date('yyyy-MM-01') %}
    {% if m1 | date('u') != '6' and m1 | date('u') != '7' %}
      {{ result.push(m1 ~ '|' ~ index) }}
      {% set index = index + 1 %}
    {% endif %}

    {% for i in range(1, 7) %}
      {% set d = now() | dateAdd(-i, 'MONTHS') | date('yyyy-MM-01') %}
      {% if d | date('u') != '6' and d | date('u') != '7' %}
        {{ result.push(d ~ '|' ~ index) }}
        {% set index = index + 1 %}
      {% endif %}
    {% endfor %}

    {{ result | json }}
